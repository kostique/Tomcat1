<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UsersGetPostServlet</servlet-name>
        <servlet-class>com.coreteka.servlets.UsersGetPostPutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersGetPostServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsersGetPutDeleteServlet</servlet-name>
        <servlet-class>com.coreteka.servlets.UsersGetDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersGetPutDeleteServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>UserRequestLoggingFilter</filter-name>
        <filter-class>com.coreteka.filters.UserRequestLoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UserRequestLoggingFilter</filter-name>
        <servlet-name>UsersGetPostServlet</servlet-name>
        <servlet-name>UsersGetPutDeleteServlet</servlet-name>
    </filter-mapping>




</web-app>

